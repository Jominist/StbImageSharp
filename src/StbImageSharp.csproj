<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <Authors>StbImageSharpTeam, Salvage</Authors>
        <Product>StbImageSharper</Product>
        <PackageId>StbImageSharper</PackageId>
        <TargetFrameworks>netstandard2.1;net5</TargetFrameworks>
        <Description>Fork of StbImageSharp featuring modernizations, fixes and performance improvements</Description>
        <PackageLicenseUrl>Public Domain</PackageLicenseUrl>
        <PackageProjectUrl>https://github.com/Jominist/StbImageSharper</PackageProjectUrl>
        <Version>1.0.1</Version>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)'=='Release'">
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>
</Project>